#!/bin/bash

# release version
version=1.0.3

CWD=$(cd $(dirname $0)/; pwd)
cd $CWD

usage()
{
	echo $"Usage: $0 {build|pack} <module>"
	exit 0
}

build()
{
	export GO111MODULE=on
  export GOPROXY=https://goproxy.cn
	go build -a -v -ldflags "-X main.version=${version} -X main.buildTime=`date -u '+%Y-%m-%d_%I:%M:%S%p'` -X main.gitHash=`git rev-parse HEAD`" -o ms-agent ms-agent.go
}

pack()
{
	mkdir -p ms-agent-${version}
  mv ms-agent app.ini ms-agent-${version}/
	tar zcvf ms-agent-${version}.tar.gz ms-agent-${version}/
}

case "$1" in
	build)
		build $2
		;;
	pack)
		pack $2
		;;
	*)
		usage
esac